<!--  Filter tabs --- -->
<div class="d-flex gap-2 mb-3 flex-wrap">
    <button class="filter-tab active" onclick="filterTable('all',this)">All</button>
    <button class="filter-tab" onclick="filterTable('pending',this)">
        <i class="bi bi-hourglass-split me-1"></i>Pending
        @if (pending.Count > 0) { <span class="badge bg-warning text-dark ms-1">@pending.Count</span> }
    </button>
    <button class="filter-tab" onclick="filterTable('overdue',this)">
        <i class="bi bi-alarm me-1"></i>Overdue
        @if (overdue.Count > 0) { <span class="badge bg-danger ms-1">@overdue.Count</span> }
    </button>
    <button class="filter-tab" onclick="filterTable('delegated',this)">
        <i class="bi bi-person-fill-add me-1"></i>Delegated to Me
    </button>
