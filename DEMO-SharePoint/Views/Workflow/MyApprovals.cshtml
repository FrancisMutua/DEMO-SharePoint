@model List<DEMO_SharePoint.Models.WorkflowInstance>
@{
    var pending  = Model?.Where(i => i.Status == "Pending").ToList()  ?? new List<DEMO_SharePoint.Models.WorkflowInstance>();
    var overdue  = pending.Where(i => i.IsOverdue).ToList();
    var allItems = Model ?? new List<DEMO_SharePoint.Models.WorkflowInstance>();
