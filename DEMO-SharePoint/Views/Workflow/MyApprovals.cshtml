function submitDelegate() {
    const instanceId = document.getElementById('delegateInstanceId').value;
    const toUser     = document.getElementById('delegateUserValue').value
                    || document.getElementById('delegateUserInput').value;
    const reason     = document.getElementById('delegateReason').value;

    if (!toUser) {
        Swal.fire('Validation', 'Please select a user to delegate to.', 'warning');
        return;
    }

    Swal.fire({ title: 'Delegating…', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
    $.ajax({
        url: '/Workflow/Delegate',
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ instanceId, toUser, reason }),
        success(res) {
