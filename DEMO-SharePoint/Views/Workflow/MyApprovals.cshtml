<script>

// -------------------------------------------------------------------
//  FILTER TABS
// -------------------------------------------------------------------
function filterTable(filter, btn) {
    document.querySelectorAll('.filter-tab').forEach(b => b.classList.remove('active'));
    btn.classList.add('active');

    document.querySelectorAll('#approvalsTable tbody tr').forEach(row => {
        const status = row.dataset.status;
        const isOverdue = row.dataset.overdue === 'true';
        const isDelegated = row.dataset.delegated === 'true';

        let show = false;
        if (filter === 'all')       show = true;
        else if (filter === 'pending')   show = (status === 'pending');
        else if (filter === 'overdue')   show = isOverdue;
        else if (filter === 'delegated') show = isDelegated;

        row.style.display = show ? '' : 'none';
    });
}


// -------------------------------------------------------------------
//  APPROVE
// -------------------------------------------------------------------
function approve(instanceId, itemUrl) {
    Swal.fire({
        title: '<i class="bi bi-check-circle text-success me-2"></i>Approve Document',
        html: '<p style="font-size:.88rem;color:#475569;">Your approval will advance the workflow to the next stage or complete it.</p>',
        input: 'textarea',
        inputLabel: 'Comments (optional)',
        inputPlaceholder: 'Enter your approval comments…',
        showCancelButton: true,
        confirmButtonText: '<i class="bi bi-check-lg me-1"></i>Approve',
        confirmButtonColor: '#198754',
        cancelButtonText: 'Cancel',
        customClass: { input: 'form-control mt-2' }
    }).then(result => {
        if (!result.isConfirmed) return;
        Swal.fire({ title: 'Processing…', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
        $.ajax({
            url: '/Workflow/Approve',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ instanceId, itemUrl, comments: result.value || '' }),
            success(res) {
                if (!res || !res.success) { Swal.fire('Error', res?.message || 'Approval failed.', 'error'); return; }
                Swal.fire({ icon: 'success', title: 'Approved!', timer: 1400, showConfirmButton: false })
                    .then(() => location.reload());
            },
            error(xhr) { Swal.fire('Error', xhr.responseText || 'Server error.', 'error'); }
        });
    });
}


// -------------------------------------------------------------------
//  REJECT
// -------------------------------------------------------------------
function reject(instanceId) {
    Swal.fire({
        title: '<i class="bi bi-x-circle text-danger me-2"></i>Reject Document',
        html: '<p style="font-size:.88rem;color:#475569;">The workflow will be stopped and the submitter will be notified.</p>',
        input: 'textarea',
        inputLabel: 'Reason for rejection',
        inputPlaceholder: 'You must provide a reason…',
        inputValidator: v => !v?.trim() && 'A rejection reason is required.',
        showCancelButton: true,
        confirmButtonText: '<i class="bi bi-x-lg me-1"></i>Reject',
        confirmButtonColor: '#dc3545',
        cancelButtonText: 'Cancel',
        customClass: { input: 'form-control mt-2' }
    }).then(result => {
        if (!result.isConfirmed) return;
        Swal.fire({ title: 'Processing…', allowOutsideClick: false, didOpen: () => Swal.showLoading() });
        $.ajax({
            url: '/Workflow/Reject',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ instanceId, comments: result.value }),
            success(res) {
                if (!res || !res.success) { Swal.fire('Error', res?.message || 'Rejection failed.', 'error'); return; }
                Swal.fire({ icon: 'success', title: 'Rejected', timer: 1400, showConfirmButton: false })
                    .then(() => location.reload());
            },
            error(xhr) { Swal.fire('Error', xhr.responseText || 'Server error.', 'error'); }
        });
    });
}


// -------------------------------------------------------------------
//  DELEGATE
// -------------------------------------------------------------------
function openDelegate(instanceId) {
    document.getElementById('delegateInstanceId').value = instanceId;
    document.getElementById('delegateUserInput').value  = '';
    document.getElementById('delegateUserValue').value  = '';
    document.getElementById('delegateReason').value     = '';
    document.getElementById('userDropdown').className   = 'd-none';
    new bootstrap.Modal(document.getElementById('delegateModal')).show();
}

let _userSearchTimer = null;
function searchUsers(q) {
    document.getElementById('delegateUserValue').value = '';
    clearTimeout(_userSearchTimer);
    const dd = document.getElementById('userDropdown');
    if (!q || q.length < 2) { dd.className = 'd-none'; return; }
    _userSearchTimer = setTimeout(() => {
        $.get('/Home/SearchUsers', { term: q }, data => {
            if (!data || !data.length) { dd.className = 'd-none'; return; }
            dd.innerHTML = data.map(u =>
                `<div class="usr-item" onclick="selectUser('${u.Login}','${u.DisplayName || u.Login}')">
                    <i class="bi bi-person-circle" style="color:#64748b;"></i>
                    <span>${u.DisplayName || u.Login}</span>
                    <small class="text-muted">(${u.Login})</small>
                </div>`
            ).join('');
            dd.className = '';
        });
    }, 280);
}

