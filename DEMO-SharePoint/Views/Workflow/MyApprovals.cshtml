<!--  Main table --- -->
@if (allItems.Any())
{
    <div class="table-responsive">
        <table class="table align-middle table-hover" id="approvalsTable">
            <thead class="table-light">
                <tr>
                    <th>Document</th>
                    <th>Workflow</th>
                    <th>Submitted By</th>
                    <th style="min-width:90px;">Level</th>
                    <th style="min-width:110px;">Due Date</th>
                    <th>Status</th>
                    <th class="text-center" style="min-width:200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in allItems)
                {
                    string rowCls = item.IsOverdue ? "overdue-row"
                        : !string.IsNullOrEmpty(item.OriginalApprover) ? "delegated-row"
                        : "";

                    string statusBadge = item.Status == "Pending"   ? "<span class='badge bg-warning text-dark'><i class='bi bi-hourglass-split me-1'></i>Pending</span>"
                        : item.Status == "Approved"  ? "<span class='badge bg-success'><i class='bi bi-check-circle me-1'></i>Approved</span>"
                        : item.Status == "Rejected"  ? "<span class='badge bg-danger'><i class='bi bi-x-circle me-1'></i>Rejected</span>"
                        : item.Status == "Delegated" ? "<span class='badge bg-secondary'><i class='bi bi-person-fill-add me-1'></i>Delegated</span>"
                        : item.Status == "Superseded"? "<span class='badge bg-secondary'>Superseded</span>"
                        : item.Status == "Cancelled" ? "<span class='badge bg-secondary'>Cancelled</span>"
                        : $"<span class='badge bg-secondary'>{item.Status}</span>";

                    <tr class="@rowCls"
                        data-status="@item.Status.ToLower()"
                        data-overdue="@(item.IsOverdue ? "true" : "false")"
                        data-delegated="@(!string.IsNullOrEmpty(item.OriginalApprover) ? "true" : "false")">

                        <!-- Document -->
                        <td>
                            <div class="fw-semibold">@item.ItemName</div>
                            @if (!string.IsNullOrEmpty(item.ItemUrl))
                            {
                                <div style="font-size:.7rem;color:#94a3b8;font-family:monospace;">
                                    @System.IO.Path.GetExtension(item.ItemUrl).ToUpper().TrimStart('.')
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(item.OriginalApprover))
                            {
                                <div style="font-size:.7rem;color:#b45309;" class="mt-1">
                                    <i class="bi bi-arrow-left-right me-1"></i>Delegated from @item.OriginalApprover
                                </div>
                            }
                            @if (item.IsEscalated)
                            {
                                <span class="badge bg-warning text-dark mt-1" style="font-size:.65rem;">
                                    <i class="bi bi-exclamation-triangle me-1"></i>Escalated
                                </span>
                            }
                        </td>

                        <!-- Workflow -->
                        <td>
                            <span class="text-muted" style="font-size:.82rem;">
                                @(!string.IsNullOrEmpty(item.WorkflowName) ? item.WorkflowName : "-")
                            </span>
                            @if (!string.IsNullOrEmpty(item.ApprovalMode))
                            {
                                <div>
                                    <span class="badge @(item.ApprovalMode == "All" ? "bg-info text-dark" : "bg-light text-dark border")"
                                          style="font-size:.65rem;">
                                        @(item.ApprovalMode == "All" ? "All must approve" : "Any can approve")
                                    </span>
                                </div>
                            }
                        </td>

                        <!-- Submitted By -->
                        <td>
                            <div style="font-size:.83rem;">@item.SubmittedBy</div>
                            <div style="font-size:.7rem;color:#94a3b8;">
                                @item.SubmittedDate.ToString("dd MMM yyyy")
                            </div>
                        </td>

                        <!-- Level -->
                        <td>
                            <span class="badge bg-primary" style="font-size:.78rem;">
                                Level @item.CurrentLevel of @item.TotalLevels
                            </span>
                        </td>

                        <!-- Due Date -->
                        <td>
                            @if (item.DueDate.HasValue)
                            {
                                TimeSpan diff = item.DueDate.Value - DateTime.Now;
                                string dueCls = item.IsOverdue ? "due-overdue"
                                    : diff.TotalDays <= 1 ? "due-soon"
                                    : "due-ok";
                                string dueText = item.IsOverdue
                                    ? $"Overdue {Math.Abs((int)diff.TotalDays)}d"
                                    : diff.TotalDays < 1 ? "Due today"
                                    : $"{(int)diff.TotalDays}d left";
                                <span class="due-badge @dueCls">
                                    <i class="bi bi-calendar-event"></i>
                                    @dueText
                                </span>
                                <div style="font-size:.68rem;color:#94a3b8;">@item.DueDate.Value.ToString("dd MMM")</div>
                            }
                            else
                            {
                                <span class="due-badge due-none"><i class="bi bi-dash"></i> No deadline</span>
                            }
                        </td>

                        <!-- Status -->
                        <td>@Html.Raw(statusBadge)</td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="d-flex flex-wrap gap-1 justify-content-center">
                                @if (!string.IsNullOrEmpty(item.ItemUrl))
                                {
                                    <button class="btn btn-outline-primary btn-sm"
                                            onclick="openViewer('@item.ItemUrl')"
                                            title="View document">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                }

                                @if (item.Status == "Pending")
                                {
                                    <button class="btn btn-success btn-sm"
                                            onclick="approve('@item.Id','@item.ItemUrl')"
                                            title="Approve">
                                        <i class="bi bi-check-lg"></i>
                                    </button>

                                    <button class="btn btn-danger btn-sm"
                                            onclick="reject('@item.Id')"
                                            title="Reject">
                                        <i class="bi bi-x-lg"></i>
                                    </button>

                                    <button class="btn btn-outline-secondary btn-sm"
                                            onclick="openDelegate('@item.Id')"
                                            title="Delegate">
                                        <i class="bi bi-person-fill-add"></i>
                                    </button>
                                }

                                <a href="@Url.Action("AuditLog","Workflow",new{itemUrl=item.ItemUrl})"
                                   class="btn btn-outline-dark btn-sm"
                                   title="Audit log">
                                    <i class="bi bi-clock-history"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-inbox display-5 text-muted"></i>
        <p class="text-muted mt-3 mb-0 fw-semibold">No approval tasks assigned to you</p>
        <p class="text-muted" style="font-size:.82rem;">Items submitted for your approval will appear here.</p>
    </div>
}


