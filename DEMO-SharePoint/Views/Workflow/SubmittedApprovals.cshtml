<!--  Main table --- -->
@if (allItems.Any())
{
    <div class="table-responsive">
        <table class="table align-middle table-hover" id="submittedTable">
            <thead class="table-light">
                <tr>
                    <th>Document</th>
                    <th>Workflow</th>
                    <th style="min-width:140px;">Progress</th>
                    <th>Submitted</th>
                    <th>Status</th>
                    <th class="text-center" style="min-width:140px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in allItems)
                {
                    int curLevel = 0;
                    int totLevel = 0;
                    int.TryParse(item.CurrentLevel, out curLevel);
                    int.TryParse(item.TotalLevels, out totLevel);
                    int pct = (totLevel > 0) ? (int)((double)curLevel / totLevel * 100) : 0;

                    string rowCls = item.Status == "Rejected"  ? "rejected-row"
                        : item.Status == "Cancelled" ? "cancelled-row"
                        : item.Status == "Approved"  ? "completed-row"
                        : "";

                    string statusBadge;
                    switch (item.Status)
                    {
                        case "Pending":
                            statusBadge = "<span class='badge bg-warning text-dark'><i class='bi bi-hourglass-split me-1'></i>In Progress</span>";
                            break;
                        case "Approved":
                            statusBadge = "<span class='badge bg-success'><i class='bi bi-patch-check-fill me-1'></i>Approved</span>";
                            break;
                        case "Rejected":
                            statusBadge = "<span class='badge bg-danger'><i class='bi bi-x-circle-fill me-1'></i>Rejected</span>";
                            break;
                        case "Cancelled":
                            statusBadge = "<span class='badge bg-secondary'><i class='bi bi-slash-circle me-1'></i>Recalled</span>";
                            break;
                        default:
                            statusBadge = $"<span class='badge bg-secondary'>{item.Status}</span>";
                            break;
                    }

                    <tr class="@rowCls"
                        data-status="@item.Status.ToLower()"
                        data-runid="@item.WorkflowRunId">

                        <!-- Document -->
                        <td>
                            <div class="fw-semibold">@item.ItemName</div>
                            @if (!string.IsNullOrEmpty(item.ItemUrl))
                            {
                                <div style="font-size:.7rem;color:#94a3b8;font-family:monospace;">
                                    @System.IO.Path.GetExtension(item.ItemUrl).ToUpper().TrimStart('.')
                                </div>
                            }
                        </td>

                        <!-- Workflow -->
                        <td>
                            <span class="text-muted" style="font-size:.82rem;">
                                @(!string.IsNullOrEmpty(item.WorkflowName) ? item.WorkflowName : "-")
                            </span>
                        </td>

                        <!-- Progress -->
                        <td>
                            @if (totLevel > 0)
                            {
                                <div style="font-size:.78rem;font-weight:600;color:#1e40af;">
                                    Level @curLevel of @totLevel
                                </div>
                                <div class="level-bar mt-1">
                                    <div class="level-bar-fill"
                                         style="width:@pct%;background:@(item.Status == "Approved" ? "#22c55e" : item.Status == "Rejected" ? "#ef4444" : "#3b82f6");"></div>
                                </div>
                                <div style="font-size:.68rem;color:#64748b;">@pct% complete</div>
                            }
                            else
                            {
                                <span class="text-muted" style="font-size:.78rem;">-</span>
                            }
                        </td>

                        <!-- Submitted Date -->
                        <td>
                            <div style="font-size:.83rem;">@item.SubmittedDate.ToString("dd MMM yyyy")</div>
                            <div style="font-size:.7rem;color:#94a3b8;">@item.SubmittedDate.ToString("HH:mm")</div>
                        </td>

                        <!-- Status -->
                        <td>
                            @Html.Raw(statusBadge)
                            @if (!string.IsNullOrEmpty(item.Comments))
                            {
                                <div style="font-size:.7rem;color:#64748b;max-width:180px;white-space:nowrap;overflow:hidden;text-overflow:ellipsis;" title="@item.Comments">
                                    <i class="bi bi-chat-left-text me-1"></i>@item.Comments
                                </div>
                            }
                        </td>

                        <!-- Actions -->
                        <td class="text-center">
                            <div class="d-flex flex-wrap gap-1 justify-content-center">
                                @if (!string.IsNullOrEmpty(item.ItemUrl))
                                {
                                    <button class="btn btn-outline-primary btn-sm"
                                            onclick="openViewer('@item.ItemUrl')"
                                            title="View document">
                                        <i class="bi bi-eye"></i>
                                    </button>
                                }

                                @if (item.Status == "Pending")
                                {
                                    <button class="btn btn-outline-warning btn-sm"
                                            onclick="recall('@item.WorkflowRunId','@item.ItemName')"
                                            title="Recall submission">
                                        <i class="bi bi-arrow-counterclockwise"></i>
                                    </button>
                                }

                                @if (!string.IsNullOrEmpty(item.ItemUrl))
                                {
                                    <a href="@Url.Action("AuditLog","Workflow",new{itemUrl=item.ItemUrl})"
                                       class="btn btn-outline-dark btn-sm"
                                       title="View audit trail">
                                        <i class="bi bi-clock-history"></i>
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
