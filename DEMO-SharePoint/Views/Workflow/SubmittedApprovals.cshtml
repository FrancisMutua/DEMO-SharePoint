@model List<DEMO_SharePoint.Models.WorkflowInstance>
@{
    var allItems  = Model ?? new List<DEMO_SharePoint.Models.WorkflowInstance>();
    var pending   = allItems.Where(i => i.Status == "Pending").ToList();
    var completed = allItems.Where(i => i.Status == "Approved").ToList();
    var rejected  = allItems.Where(i => i.Status == "Rejected").ToList();
    var recalled  = allItems.Where(i => i.Status == "Cancelled").ToList();
}

