@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var errorTitle   = ViewBag.ErrorTitle   as string ?? "Something Went Wrong";
    var errorMessage = ViewBag.ErrorMessage as string ?? "An unexpected error occurred. Please try again or contact your system administrator.";
    var errorDetail  = ViewBag.ErrorDetail  as string;
}

<style>
    .error-page-wrapper {
        min-height: 70vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem 1rem;
    }

    .error-card {
        max-width: 680px;
        width: 100%;
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 40px rgba(28, 32, 51, 0.14);
        overflow: hidden;
    }

    .error-card-header {
        background: linear-gradient(135deg, #1C2033 0%, #2a3050 100%);
        padding: 2.5rem 2rem 1.75rem;
        text-align: center;
    }

    .error-icon-ring {
        width: 84px;
        height: 84px;
        border-radius: 50%;
        background: rgba(232, 79, 38, 0.12);
        border: 3px solid #E84F26;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1.25rem;
        animation: pulse-ring 2.5s ease-in-out infinite;
    }

    @@keyframes pulse-ring {
        0%, 100% { box-shadow: 0 0 0 0 rgba(232, 79, 38, 0.35); }
        50%       { box-shadow: 0 0 0 10px rgba(232, 79, 38, 0); }
    }

    .error-icon-ring i {
        font-size: 2.6rem;
        color: #E84F26;
    }

    .error-card-header h1 {
        color: #fff;
        font-size: 1.55rem;
        font-weight: 700;
        margin-bottom: .3rem;
        letter-spacing: -.01em;
    }

    .error-card-header p {
        color: rgba(255,255,255,.55);
        font-size: 0.82rem;
        margin: 0;
    }

    .error-card-body {
        padding: 2rem;
    }

    .error-message-box {
        background: #fff8f6;
        border-left: 4px solid #E84F26;
        border-radius: 0 10px 10px 0;
        padding: 1rem 1.25rem;
        font-size: 0.95rem;
        color: #374151;
        margin-bottom: 1.5rem;
        line-height: 1.65;
    }

    .error-detail-toggle {
        font-size: 0.8rem;
        color: #6b7280;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: .3rem;
        margin-bottom: .6rem;
        background: none;
        border: none;
        padding: 0;
        text-decoration: underline dotted;
        transition: color .15s;
    }
    .error-detail-toggle:hover { color: #374151; }

    .error-detail-box {
        background: #0f1117;
        color: #86efac;
        border-radius: 8px;
        padding: .85rem 1rem;
        font-family: 'Courier New', monospace;
        font-size: 0.78rem;
        line-height: 1.55;
        word-break: break-all;
        margin-bottom: 1.5rem;
        max-height: 150px;
        overflow-y: auto;
        border: 1px solid #1e293b;
    }

    .error-actions {
        display: flex;
        gap: .75rem;
        flex-wrap: wrap;
        margin-top: .25rem;
    }

    .btn-err-primary {
        background: #E84F26;
        border: 2px solid #E84F26;
        color: #fff;
        border-radius: 8px;
        padding: .5rem 1.25rem;
        font-weight: 600;
        font-size: .88rem;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        cursor: pointer;
        text-decoration: none;
        transition: background .15s, border-color .15s;
    }
    .btn-err-primary:hover { background: #cf4520; border-color: #cf4520; color: #fff; }

    .btn-err-navy {
        background: transparent;
        border: 2px solid #1C2033;
        color: #1C2033;
        border-radius: 8px;
        padding: .5rem 1.2rem;
        font-weight: 600;
        font-size: .88rem;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        cursor: pointer;
        transition: background .15s, color .15s;
    }
    .btn-err-navy:hover { background: #1C2033; color: #fff; }

    .btn-err-ghost {
        background: transparent;
        border: 2px solid #d1d5db;
        color: #6b7280;
        border-radius: 8px;
        padding: .5rem 1.2rem;
        font-weight: 600;
        font-size: .88rem;
        display: inline-flex;
        align-items: center;
        gap: .4rem;
        cursor: pointer;
        transition: border-color .15s, color .15s;
    }
    .btn-err-ghost:hover { border-color: #9ca3af; color: #374151; }

    .error-card-footer {
        background: #f9fafb;
        border-top: 1px solid #e9ecef;
        padding: .85rem 2rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: .5rem;
    }

    .error-card-footer .footer-ts {
        font-size: 0.77rem;
        color: #9ca3af;
        display: flex;
        align-items: center;
        gap: .3rem;
    }

    .error-card-footer .footer-support {
        font-size: 0.77rem;
        color: #E84F26;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: .3rem;
    }
    .error-card-footer .footer-support:hover { text-decoration: underline; }

    /* brand stripe */
    .error-brand-stripe {
        height: 4px;
        background: linear-gradient(90deg, #E84F26 0%, #FEB900 50%, #E84F26 100%);
    }
</style>

<div class="error-page-wrapper">
    <div class="error-card">

        <div class="error-brand-stripe"></div>

        <div class="error-card-header">
            <div class="error-icon-ring">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <h1>@errorTitle</h1>
            <p>AppKings Document Management System</p>
        </div>

        <div class="error-card-body">

            <div class="error-message-box">
                <i class="bi bi-info-circle-fill me-2" style="color:#E84F26;"></i>@errorMessage
            </div>

            @if (!string.IsNullOrEmpty(errorDetail))
            {
                <button class="error-detail-toggle" onclick="toggleErrDetail(this)" type="button">
                    <i class="bi bi-terminal-fill"></i> Show technical details
                </button>
                <div class="error-detail-box" id="errDetailBox" style="display:none;">@errorDetail</div>
            }

            <div class="error-actions">
                <a href="@Url.Action("Index", "Home")" class="btn-err-primary">
                    <i class="bi bi-house-fill"></i> Go to Dashboard
                </a>
                <button onclick="history.back()" class="btn-err-navy" type="button">
                    <i class="bi bi-arrow-left"></i> Go Back
                </button>
                <button onclick="location.reload()" class="btn-err-ghost" type="button">
                    <i class="bi bi-arrow-clockwise"></i> Retry
                </button>
            </div>
        </div>

        <div class="error-card-footer">
            <span class="footer-ts">
                <i class="bi bi-clock"></i>
                @DateTime.Now.ToString("dd MMM yyyy, HH:mm")
            </span>
            <a href="mailto:support@yourdomain.com" class="footer-support">
                <i class="bi bi-envelope-fill"></i> Contact Support
            </a>
        </div>

    </div>
</div>

<script>
    function toggleErrDetail(btn) {
        var box = document.getElementById('errDetailBox');
        if (box.style.display === 'none') {
            box.style.display = 'block';
            btn.innerHTML = '<i class="bi bi-terminal-fill"></i> Hide technical details';
        } else {
            box.style.display = 'none';
            btn.innerHTML = '<i class="bi bi-terminal-fill"></i> Show technical details';
        }
    }
</script>
