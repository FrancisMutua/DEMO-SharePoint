@model List<KCAU_SharePoint.Models.WorkflowInstance>

<!-- ====== REQUIRED CSS ====== -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">

<!-- ====== REQUIRED SCRIPTS ====== -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.all.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js"></script>

<style>
    #pdfViewerContainer {
        width: 100%;
        height: 800px;
        border: 1px solid #ccc;
        overflow-y: auto;
        position: relative;
        user-select: none;
    }

    canvas {
        display: block;
        margin: 0 auto 10px auto;
    }

    #scrollOverlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        cursor: default;
    }
</style>

<div class="container py-4">
    <h4>Pending Approvals</h4>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Document</th>
                        <th>Submitted By</th>
                        <th>Level</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@item.SubmittedBy</td>
                            <td>Level @item.CurrentLevel</td>
                            <td>
                                <button class="btn btn-primary btn-sm me-1" onclick="openViewer('@item.ItemUrl')">View</button>
                                <button class="btn btn-success btn-sm me-1" onclick="approve('@item.Id')">Approve</button>
                                <button class="btn btn-danger btn-sm" onclick="reject('@item.Id')">Reject</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted">No pending approvals.</p>
    }
</div>

<!-- ====== DOCUMENT VIEWER MODAL ====== -->
<div class="modal fade" id="fileViewerModal" tabindex="-1">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Document Viewer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-0" style="height:75vh;">
                <iframe id="fileViewerFrame" src="" style="width:100%; height:100%; border:none;"></iframe>
            </div>
        </div>
    </div>
</div>

<script>
    // ===== VIEWER FUNCTION =====
    function openViewer(fileUrl) {
        const restrictedPath = "/Legal Services Departments/KCAU POLICIES";
        const isRestricted = fileUrl.includes(restrictedPath);

        if (isRestricted) {
            // Restricted PDFs → PDF.js
            $.ajax({
                url: '/Home/ViewDocument',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ fileUrl: fileUrl }),
                success: function (res) {
                    if (!res.success) { Swal.fire('Error', res.message, 'error'); return; }

                    const modalBody = $('#fileViewerModal .modal-body');
                    modalBody.html(`
                        <div id="pdfViewerContainer" style="width:100%; height:100%; position:relative;">
                            <div id="scrollOverlay"></div>
                        </div>
                    `);

                    const container = document.getElementById('pdfViewerContainer');
                    const overlay = document.getElementById('scrollOverlay');
                    overlay.addEventListener('contextmenu', e => e.preventDefault());

                    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js';

                    const pdfData = atob(res.base64);
                    const pdfUint8 = new Uint8Array(pdfData.length);
                    for (let i = 0; i < pdfData.length; i++) pdfUint8[i] = pdfData.charCodeAt(i);

                    pdfjsLib.getDocument({ data: pdfUint8 }).promise.then(pdf => {
                        for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                            pdf.getPage(pageNum).then(page => {
                                const canvas = document.createElement('canvas');
                                container.appendChild(canvas);
                                const viewport = page.getViewport({ scale: 1.2 });
                                canvas.width = viewport.width;
                                canvas.height = viewport.height;
                                page.render({ canvasContext: canvas.getContext('2d'), viewport: viewport });
                            });
                        }
                    });

                    new bootstrap.Modal(document.getElementById("fileViewerModal")).show();
                },
                error: function (xhr) { Swal.fire('Error', 'Failed to load document: ' + xhr.responseText, 'error'); }
            });
        } else {
            // Other files → iframe
            $.ajax({
                url: '/Home/ViewDocument',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ fileUrl: fileUrl }),
                success: function (res) {
                    if (!res.success) { Swal.fire('Error', res.message, 'error'); return; }
                    $('#fileViewerFrame').attr('src', `data:${res.contentType};base64,${res.base64}`);
                    new bootstrap.Modal(document.getElementById("fileViewerModal")).show();
                },
                error: function (xhr) { Swal.fire('Error', 'Failed to load document: ' + xhr.responseText, 'error'); }
            });
        }
    }

    // ===== APPROVE FUNCTION =====
    function approve(workflowInstanceId, level, approverName) {
        Swal.fire({
            title: 'Approve?',
            input: 'textarea',
            inputLabel: 'Comments (optional)',
            showCancelButton: true,
            confirmButtonText: 'Approve'
        }).then(result => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/Workflow/Approve',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({
                        workflowInstanceId: workflowInstanceId,
                        level: level,
                        approverName: approverName,
                        comments: result.value
                    }),
                    success: function (res) {
                        Swal.fire('Approved!', '', 'success').then(() => location.reload());
                    },
                    error: function (xhr) {
                        Swal.fire('Error', xhr.responseText || 'Something went wrong', 'error');
                    }
                });
            }
        });
    }

    // ===== REJECT FUNCTION =====
    function reject(id) {
        Swal.fire({
            title: 'Reject?',
            input: 'textarea',
            inputLabel: 'Reason for rejection',
            inputValidator: value => !value && 'Comments required',
            showCancelButton: true,
            confirmButtonText: 'Reject'
        }).then(result => {
            if (result.isConfirmed) {
                $.post('/Workflow/Reject', { instanceId: id, comments: result.value }, function (res) {
                    if (res.success) Swal.fire('Rejected!', '', 'success').then(() => location.reload());
                    else Swal.fire('Error', res.message, 'error');
                });
            }
        });
    }
</script>

