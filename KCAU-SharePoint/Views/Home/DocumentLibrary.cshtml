@using KCAU_SharePoint.Models
@{
    ViewBag.Title = "Document Library";
    var items = ViewBag.Items as List<SPItem>;
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<!-- DataTables Bootstrap 5 integration -->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
<!-- SweetAlert2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet">
<!-- SweetAlert2 JS -->
<!-- PDF.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js"></script>

<style>
    #pdfViewerContainer {
        width: 100%;
        height: 800px;
        border: 1px solid #ccc;
        overflow-y: auto;
        position: relative;
        user-select: none; /* disable text selection */
    }

    canvas {
        display: block;
        margin: 0 auto 10px auto;
    }

    /* Overlay to block right-click */
    #scrollOverlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 10;
        cursor: default;
    }
</style>
<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center p-2 mb-3">
        <h4 class="fw-semibold mb-0">Documents</h4>

        <div class="d-flex gap-2">
            <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#uploadModal">
                <i class="bi bi-upload me-1"></i> Upload
            </button>

            <button class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#createFolderModal">
                <i class="bi bi-folder-plus me-1"></i> New Folder
            </button>

        </div>
    </div>

    <!-- BREADCRUMB -->
    <nav class="mb-3">
        <span class="text-muted">Documents</span>
        <span id="breadcrumb"></span>
    </nav>

    @*<h5 class="fw-semibold mb-3">Library: @ViewBag.LibraryUrl</h5>*@

    @if (items != null && items.Any())
    {
        var allColumns = items.SelectMany(i => i.Metadata.Keys).Distinct().ToList();

        <!-- TABLE WRAPPER -->
        <table id="documentsTable" class="table table-hover table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    @foreach (var col in allColumns)
                    {
                        <th>@col</th>
                    }
                    <th>Actions</th>
                </tr>
                <tr>
                    <th><input type="text" class="form-control form-control-sm" placeholder="Search Name" /></th>
                    <th>
                        <select class="form-select form-select-sm">
                            <option value="">All</option>
                            <option value="File">File</option>
                            <option value="Folder">Folder</option>
                        </select>
                    </th>

                    @foreach (var col in allColumns)
                    {
                        <th><input type="text" class="form-control form-control-sm" placeholder="Search" /></th>
                    }

                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in items)
                {


                    <tr>
                        <!-- NAME COLUMN (ONE TD ONLY) -->
                        <td>
                            @if (item.IsFolder)
                            {
                                <a href="@Url.Action("DocumentLibrary","Home", new { libraryUrl = item.Url })"
                                   class="text-decoration-none">
                                    <i class="bi bi-folder-fill text-warning me-1"></i>
                                    <small>@item.Name</small>
                                </a>
                            }
                            else
                            {
                                <i class="bi bi-file-earmark-text me-1 text-secondary"></i>
                                @item.Name
                            }
                        </td>

                        <!-- TYPE COLUMN -->
                        <td>@(item.IsFolder ? "Folder" : "File")</td>

                        <!-- METADATA -->
                        @foreach (var col in allColumns)
                        {
                            <td>@(item.Metadata.ContainsKey(col) ? item.Metadata[col] : "")</td>
                        }
                        <!-- ACTIONS -->
                        <td class="text-center">
                            @if (!item.IsFolder)
                            {
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item" href="javascript:void(0)"
                                               onclick="openViewer('@item.Url')">
                                                <i class="bi bi-eye me-2"></i> View
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-primary"
                                               href="javascript:void(0)"
                                               onclick="submitForApproval('@item.Url', '@item.Name', @ViewBag.CurrentWorkflowId)">
                                                <i class="bi bi-send me-2"></i> Send for Approval
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-warning"
                                               href="javascript:void(0)"
                                               onclick="renameItem('@item.Url', false, '@item.Name')">
                                                <i class="bi bi-pencil me-2"></i> Edit
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-muted"
                                               href="javascript:void(0)"
                                               onclick="showVersions('@item.Url')">
                                                <i class="bi bi-clock-history me-2"></i> Versions
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item text-danger"
                                               href="javascript:void(0)"
                                               onclick="deleteItem('@item.Url', false)">
                                                <i class="bi bi-trash me-2"></i> Delete
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item"
                                               href="javascript:void(0)"
                                               onclick="shareItem('@item.Url')">
                                                <i class="bi bi-share me-2"></i> Share
                                            </a>
                                        </li>
                                       

                                        <li>
                                            <a class="dropdown-item text-warning"
                                               href="javascript:void(0)"
                                               onclick="renameItem('@item.Url', false, '@item.Name')">
                                                <i class="bi bi-pencil me-2"></i> Edit
                                            </a>
                                        </li>

                                        <li>
                                            <a class="dropdown-item text-danger"
                                               href="javascript:void(0)"
                                               onclick="deleteItem('@item.Url', false)">
                                                <i class="bi bi-trash me-2"></i> Delete
                                            </a>
                                        </li>
                                    </ul>

                                </div>

                            }
                        </td>
                    </tr>
                }
            </tbody>

        </table>


    }
    else
    {
        <p class="text-muted">This library is empty.</p>
    }
</div>

<!-- VIEW MODAL -->
