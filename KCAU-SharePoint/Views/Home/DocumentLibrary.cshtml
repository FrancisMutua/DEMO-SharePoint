    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Document Viewer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-0" style="height:75vh;">
                <iframe id="fileViewerFrame"
                        src=""
                        style="width:100%; height:100%; border:none;">
                </iframe>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="fileViewerModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Document Viewer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body p-0">
                <iframe id="fileViewerFrame"
                        src=""
                        style="width:100%; border:none; height:600px;">
                </iframe>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" id="uploadModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Document</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="file" id="uploadFile" class="form-control" />
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" onclick="uploadFile()">Upload</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="createFolderModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Folder</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <input type="text" id="folderName" class="form-control" placeholder="Folder name" />
            </div>

            <div class="modal-footer">
                <button class="btn btn-primary" onclick="createFolder()">Create</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="shareModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-share me-2"></i> Share
                </h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                <label class="form-label">Add people</label>
                <input type="text"
                       id="shareUser"
                       class="form-control"
                       placeholder="Search name or username"
                       autocomplete="off" />

                <ul class="list-group position-absolute w-100 d-none"
                    id="userResults"
                    style="z-index:1056; max-height:200px; overflow:auto;">
                </ul>

                <label class="form-label mt-3">Permission</label>
                <select id="shareRole" class="form-select">
                    <option value="Read">Can view</option>
                    <option value="Edit">Can edit</option>
                </select>

                <button class="btn btn-primary mt-3 w-100" onclick="grantAccess()">
                    Share
                </button>

                <hr />

                <label class="form-label">Link</label>
                <div class="input-group">
                    <input type="text" id="shareLink" class="form-control" readonly />
                    <button class="btn btn-outline-secondary" onclick="copyShareLink()">
                        <i class="bi bi-clipboard"></i>
                    </button>
                </div>

                <small class="text-muted mt-2 d-block">
                    Access is controlled by SharePoint permissions
                </small>
            </div>

        </div>
    </div>
</div>

<script>
    function submitForApproval(itemUrl, itemName, workflowId) {
        Swal.fire({
            title: 'Send for Approval?',
            showCancelButton: true,
            confirmButtonText: 'Yes'
        }).then((result) => {
            if (result.isConfirmed) {
                $.post('/Workflow/SubmitForApproval',
                    { itemUrl: itemUrl, itemName: itemName, workflowId: workflowId },
                    function (res) {
                        if (res.success) {
                            Swal.fire('Submitted!', '', 'success').then(() => location.reload());
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    });
            }
        });
    }


    function openViewer(fileUrl) {
        const restrictedPath = "/Legal Services Departments/KCAU POLICIES";
        const isRestricted = fileUrl.includes(restrictedPath);

        if (isRestricted) {
            // Use PDF.js viewer for restricted PDFs (Base64)
            $.ajax({
                url: '/Home/ViewDocument', // same endpoint as normal files
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ fileUrl: fileUrl }),
                success: function (res) {
                    if (!res.success) {
                        alert(res.message);
                        return;
                    }

                    // Prepare modal body
                    const modalBody = $('#fileViewerModal .modal-body');
                    modalBody.html(`
                    <div id="pdfViewerContainer" style="width:100%; height:100%; position:relative;">
                        <div id="scrollOverlay" style="position:absolute;top:0;left:0;width:100%;height:100%;z-index:10;cursor:default;"></div>
                    </div>
                `);

                    const container = document.getElementById('pdfViewerContainer');
                    const overlay = document.getElementById('scrollOverlay');

                    // Block right-click
                    overlay.addEventListener('contextmenu', e => e.preventDefault());

                    // PDF.js worker
                    pdfjsLib.GlobalWorkerOptions.workerSrc = 'https://cdnjs.cloudflare.com/ajax/libs/pdf.js/2.16.105/pdf.worker.min.js';

                    // Convert Base64 to Uint8Array
                    const pdfData = atob(res.base64);
                    const pdfUint8 = new Uint8Array(pdfData.length);
                    for (let i = 0; i < pdfData.length; i++) pdfUint8[i] = pdfData.charCodeAt(i);

                    // Load PDF
                    pdfjsLib.getDocument({ data: pdfUint8 }).promise.then(pdf => {
                        for (let pageNum = 1; pageNum <= pdf.numPages; pageNum++) {
                            pdf.getPage(pageNum).then(page => {
                                const canvas = document.createElement('canvas');
                                container.appendChild(canvas);
                                const viewport = page.getViewport({ scale: 1.2 });
                                canvas.height = viewport.height;
                                canvas.width = viewport.width;
                                const context = canvas.getContext('2d');
                                page.render({ canvasContext: context, viewport: viewport });
                            });
                        }
                    });

                    // Show modal
                    new bootstrap.Modal(document.getElementById("fileViewerModal")).show();
                },
                error: function () {
                    alert("Unable to view document");
                }
            });
        } else {
            // Normal file handling (iframe) for all other documents
            $.ajax({
                url: '/Home/ViewDocument',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify({ fileUrl: fileUrl }),
                success: function (res) {
                    if (!res.success) {
                        alert(res.message);
                        return;
                    }

                    const frame = $("#fileViewerFrame");
                    frame.attr("src", `data:${res.contentType};base64,${res.base64}`);

                    new bootstrap.Modal(document.getElementById("fileViewerModal")).show();
                },
                error: function () {
                    alert("Unable to view document");
                }
            });
        }
    }



    function showVersions(fileUrl) {
        $.ajax({
            url: '/Home/GetFileVersions',
            type: 'POST',
            contentType: 'application/json',
            data: JSON.stringify({ fileUrl: fileUrl }),
            success: function (res) {
                if (!res.success) {
                    alert(res.message);
                    return;
                }

                const list = $("#versionsList");
                list.empty();

                res.versions.forEach(function (v) {
                    const li = $(`
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <strong>Version:</strong> ${v.VersionLabel} <br/>
                            <small>By ${v.CreatedBy} on ${new Date(v.Created).toLocaleString()}</small>
                        </div>
                        <div class="btn-group">
                            <button class="btn btn-sm btn-outline-primary me-1" onclick="openViewer('${v.Url}?version=${v.VersionLabel}')">
                                View
                            </button>
                            <a class="btn btn-sm btn-outline-success" href="${v.Url}?version=${v.VersionLabel}" download>
                                Download
                            </a>
                        </div>
                    </li>
                `);
                    list.append(li);
                });

                var modal = new bootstrap.Modal(document.getElementById('versionsModal'));
                modal.show();
            },
            error: function () {
                alert("Unable to fetch versions");
            }
        });
    }
    function shareItem(itemUrl) {
        $('#shareLink').val(window.location.origin + itemUrl);
        $('#shareUser').val('');

        new bootstrap.Modal(document.getElementById('shareModal')).show();

        $('#shareModal').data('itemUrl', itemUrl);
    }

    function grantAccess() {
        const user = $('#shareUser').val();
        const role = $('#shareRole').val();
        const itemUrl = $('#shareModal').data('itemUrl');

        if (!user) {
            Swal.fire('Error', 'Enter a user', 'error');
            return;
        }

        $.ajax({
            url: '/Home/GrantItemAccess',
            type: 'POST',
            data: {
                itemUrl: itemUrl,
                userLogin: user,
                role: role
            },
            success: function (res) {
                if (!res.success) {
                    Swal.fire('Error', res.message, 'error');
                    return;
                }

                Swal.fire('Shared', 'Access granted successfully', 'success');
            },
            error: function () {
                Swal.fire('Error', 'Unable to share item', 'error');
            }
        });
    }

    function copyShareLink() {
        const input = document.getElementById('shareLink');
        input.select();
        navigator.clipboard.writeText(input.value);
    }
    let userSearchTimer = null;

    $('#shareUser').on('keyup', function () {
        const query = $(this).val().trim();

        clearTimeout(userSearchTimer);

        if (query.length < 2) {
            $('#userResults').addClass('d-none').empty();
            return;
        }

        userSearchTimer = setTimeout(() => {
            $.ajax({
                url: '/Home/SearchUsers',
                type: 'GET',
                data: { term: query },
                success: function (res) {
                    const list = $('#userResults');
                    list.empty();

                    if (!res || res.length === 0) {
                        list.addClass('d-none');
                        return;
                    }

                    res.forEach(u => {
                        list.append(`
                        <li class="list-group-item list-group-item-action"
                            onclick="selectUser('${u.Login}')">
                            <strong>${u.DisplayName}</strong><br/>
                            <small class="text-muted">${u.Login}</small>
                        </li>
                    `);
                    });

                    list.removeClass('d-none');
                }
            });
        }, 300); // debounce
    });

    function selectUser(login) {
        $('#shareUser').val(login);
        $('#userResults').addClass('d-none').empty();
    }

</script>
<script>
    $(document).ready(function () {

        const table = $('#documentsTable').DataTable({
            paging: true,
            searching: true,
            ordering: true,
            info: true,
            responsive: true,
            orderCellsTop: true,
            fixedHeader: true,
            columnDefs: [
                { orderable: false, targets: -1 } // Actions column
            ]
        });

        // Column filters
        $('#documentsTable thead tr:eq(1) th').each(function (i) {
            $('input, select', this).on('keyup change clear', function () {
                if (table.column(i).search() !== this.value) {
                    table.column(i).search(this.value).draw();
                }
            });
        });
    });

    // ===================== UPLOAD FILE =====================
    function uploadFile() {
        const input = document.getElementById('uploadFile');
        if (!input || input.files.length === 0) {
            alert("Please select a file");
            return;
        }

        const formData = new FormData();
        formData.append("file", input.files[0]);
        formData.append("libraryUrl", '@ViewBag.LibraryUrl');

        $.ajax({
            url: '/Home/UploadFile',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function (res) {
                if (!res || res.success !== true) {
                    alert(res?.message || "Upload failed");
                    return;
                }
                location.reload();
            },
            error: function () {
                alert("Error uploading file");
            }
        });
    }

    // ===================== CREATE FOLDER =====================
    function createFolder() {
    const folderName = $('#folderName').val().trim();
    if (!folderName) {
        alert("Enter folder name");
        return;
    }

        $.ajax({
            url: '/Home/CreateFolder',
            type: 'POST',
            data: {
                folderName: folderName,
                libraryUrl: '@ViewBag.LibraryUrl'
            },
            success: function (res) {
                if (!res.success) {
                    alert(res.message);
                    return;
                }
                location.reload();
            },
            error: function (xhr) {
                alert(xhr.responseText);
            }
        });
    }
    function deleteItem(itemUrl, isFolder) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you want to delete this " + (isFolder ? "folder" : "file") + "?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                // Proceed with AJAX delete
                $.ajax({
                    url: '@Url.Action("DeleteItem","Home")',
                    type: 'POST',
                    data: { itemUrl: itemUrl, isFolder: isFolder },
                    success: function(res) {
                        if (res.success) {
                            Swal.fire(
                                'Deleted!',
                                (isFolder ? 'Folder' : 'File') + ' has been deleted.',
                                'success'
                            ).then(() => location.reload());
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        Swal.fire('Error', xhr.responseText, 'error');
                    }
                });
            }
        });
    }
    function renameItem(itemUrl, isFolder, currentName) {
        Swal.fire({
            title: 'Rename ' + (isFolder ? 'Folder' : 'File'),
            input: 'text',
            inputLabel: 'New Name',
            inputValue: currentName,
            showCancelButton: true,
            confirmButtonText: 'Rename',
            cancelButtonText: 'Cancel',
            preConfirm: (newName) => {
                if (!newName || newName.trim() === "") {
                    Swal.showValidationMessage('Name cannot be empty');
                }
                return newName.trim();
            }
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '@Url.Action("RenameItem", "Home")',
                    type: 'POST',
                    data: {
                        itemUrl: itemUrl,
                        isFolder: isFolder,
                        newName: result.value
                    },
                    success: function(res) {
                        if (res.success) {
                            Swal.fire('Renamed!', (isFolder ? 'Folder' : 'File') + ' renamed successfully.', 'success')
                                .then(() => location.reload());
                        } else {
                            Swal.fire('Error', res.message, 'error');
                        }
                    },
                    error: function(xhr) {
                        Swal.fire('Error', xhr.responseText, 'error');
                    }
                });
            }
        });
    }

</script>



